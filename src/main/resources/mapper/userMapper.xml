<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Haven.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.Haven.pojo.User">
        insert into STAGE.user(id, username, password)
        values (#{id}, #{username}, #{password}, #{prems});
    </insert>
    <delete id="deleteUserById" parameterType="Integer">
        delete
        from user
        where id=#{userid};
    </delete>
    <update id="updateUser" parameterType="com.Haven.pojo.User">
        update user set
        username = #{username},
        password = #{password},
        prems = #{prems}
        where id = #{id};
    </update>
    <select id="selectUserByName" parameterType="String" resultType="com.Haven.pojo.User">
        select *
        from user
        where username = #{username};
    </select>
    <select id="selectUserById" parameterType="Integer" resultType="com.Haven.pojo.User">
        select *
        from user
        where id = #{userid};
    </select>
    <select id="selectUserAll" resultType="com.Haven.pojo.User">
        select *
        from user;
    </select>
</mapper>